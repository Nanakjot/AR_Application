<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#03664FA4"
    tools:context=".SignUp">

    <TextView
        android:id="@+id/SignUpTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_bold"
        android:text="Welcome Back"
        android:textAlignment="center"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.572" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="308dp"
        android:layout_height="191dp"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.397">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/SignUpUserTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_semibold"
                android:text="Username"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/userNameId"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:autofillHints="none"
                android:ems="10"
                android:fontFamily="@font/open_sans"
                android:hint="E-mail/UserID"
                android:inputType="text"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/SignUpPassTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_semibold"
                android:text="Password"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/passId"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ems="10"
                android:fontFamily="@font/open_sans"
                android:hint="Pass"
                android:inputType="textPassword"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/SignUpLoginButton"
        android:layout_width="159dp"
        android:layout_height="58dp"
        android:fontFamily="@font/open_sans_bold"
        android:onClick="loginBtn"
        android:text="Login"
        android:textSize="16sp"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.134" />

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="120dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SignUpLoginButton"
        app:layout_constraintVertical_bias="0.43">

        <LinearLayout
            android:id="@+id/googleBtn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:clickable="true"
            android:onClick="extraSignIn"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/googlelogo" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="190dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:fontFamily="@font/open_sans"
                android:gravity="center"
                android:text="Login with Google"
                android:textAlignment="center" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/gitBtn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:onClick="extraSignIn"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/githublogo" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="190dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:background="#1B1E24"
                android:fontFamily="@font/open_sans"
                android:gravity="center"
                android:text="Login with Github"
                android:textAlignment="center"
                android:textColor="#FDFDFE" />
        </LinearLayout>
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>